<Window x:Class="FolderIconManager.GUI.Dialogs.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" 
        Height="500" Width="550"
        MinHeight="400" MinWidth="450"
        Background="{StaticResource BackgroundDarkBrush}"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Loaded="Window_Loaded">
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Appearance Settings -->
                <TextBlock Text="Appearance" 
                           Foreground="{StaticResource AccentBlueBrush}"
                           FontWeight="Bold" FontSize="14"
                           Margin="0,0,0,12"/>
                
                <Border Background="{StaticResource BackgroundMediumBrush}" 
                        CornerRadius="6" Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Theme:" 
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       VerticalAlignment="Center" Width="140"/>
                            <ComboBox x:Name="ThemeComboBox" Width="150">
                                <ComboBoxItem Content="ðŸ–¥ï¸ System" Tag="System"/>
                                <ComboBoxItem Content="ðŸŒ™ Dark" Tag="Dark"/>
                                <ComboBoxItem Content="â˜€ï¸ Light" Tag="Light"/>
                            </ComboBox>
                        </StackPanel>
                        <TextBlock Text="Match your Windows theme or choose a specific mode"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="11" Margin="140,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Scanning Settings -->
                <TextBlock Text="Scanning" 
                           Foreground="{StaticResource AccentBlueBrush}"
                           FontWeight="Bold" FontSize="14"
                           Margin="0,0,0,12"/>
                
                <Border Background="{StaticResource BackgroundMediumBrush}" 
                        CornerRadius="6" Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <CheckBox x:Name="IncludeSubfoldersCheckBox"
                                  Content="Include subfolders by default"
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  Margin="0,0,0,12"/>
                        
                        <CheckBox x:Name="ShowHiddenFoldersCheckBox"
                                  Content="Show hidden folders"
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  Margin="0,0,0,12"/>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="Default scan depth:" 
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       VerticalAlignment="Center" Width="140"/>
                            <ComboBox x:Name="DepthLimitComboBox" Width="150"
                                      Background="{StaticResource BackgroundLightBrush}"
                                      Foreground="{StaticResource TextPrimaryBrush}">
                                <ComboBoxItem Content="Unlimited" Tag=""/>
                                <ComboBoxItem Content="1 level"/>
                                <ComboBoxItem Content="2 levels"/>
                                <ComboBoxItem Content="3 levels"/>
                                <ComboBoxItem Content="5 levels"/>
                                <ComboBoxItem Content="10 levels"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Icon Settings -->
                <TextBlock Text="Icons" 
                           Foreground="{StaticResource AccentBlueBrush}"
                           FontWeight="Bold" FontSize="14"
                           Margin="0,0,0,12"/>
                
                <Border Background="{StaticResource BackgroundMediumBrush}" 
                        CornerRadius="6" Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Default storage mode:" 
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   Margin="0,0,0,8"/>
                        
                        <RadioButton x:Name="LocalRadio" 
                                     Content="ðŸ“¥ Local (Extract to folder.ico)"
                                     Foreground="{StaticResource TextPrimaryBrush}"
                                     Margin="16,0,0,8"/>
                        <TextBlock Text="Recommended - Icons are portable and won't break if source moves"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="11" Margin="36,0,0,12"/>
                        
                        <RadioButton x:Name="ExternalRadio" 
                                     Content="ðŸ”— External (Keep reference)"
                                     Foreground="{StaticResource TextPrimaryBrush}"
                                     Margin="16,0,0,8"/>
                        <TextBlock Text="Saves space but icons may break if source file is moved or deleted"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="11" Margin="36,0,0,12"/>

                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock Text="Local icon filename:" 
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       VerticalAlignment="Center" Width="140"/>
                            <TextBox x:Name="IconFilenameTextBox"
                                     Style="{StaticResource ModernTextBox}"
                                     Width="150"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- System Icon Sources -->
                <TextBlock Text="System Icon Sources" 
                           Foreground="{StaticResource AccentBlueBrush}"
                           FontWeight="Bold" FontSize="14"
                           Margin="0,0,0,12"/>
                
                <Border Background="{StaticResource BackgroundMediumBrush}" 
                        CornerRadius="6" Padding="16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="150"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Text="DLL/EXE files shown in the System Icons tab of the icon picker:"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="11" Margin="0,0,0,8"/>

                        <ListBox Grid.Row="1" x:Name="SourcesListBox"
                                 Background="{StaticResource BackgroundDarkBrush}"
                                 Foreground="{StaticResource TextPrimaryBrush}"
                                 BorderBrush="{StaticResource BorderBrush}"/>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,0">
                            <Button Content="Add..." 
                                    Style="{StaticResource ModernButton}"
                                    Padding="12,6" Margin="0,0,8,0"
                                    Click="AddSourceButton_Click"/>
                            <Button Content="Remove" 
                                    Style="{StaticResource ModernButton}"
                                    Padding="12,6" Margin="0,0,8,0"
                                    Click="RemoveSourceButton_Click"/>
                            <Button Content="Reset to Defaults" 
                                    Style="{StaticResource ModernButton}"
                                    Padding="12,6"
                                    Click="ResetSourcesButton_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Cancel" 
                    Style="{StaticResource ModernButton}"
                    Width="100" Margin="0,0,8,0"
                    Click="CancelButton_Click"/>
            <Button Content="Save" 
                    Style="{StaticResource PrimaryButton}"
                    Width="100"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>

